@model UCEP.ViewModels.PatientModel

@{
    ViewBag.Title = "ExportCSV";
}

<h2>Export CSV</h2>


@using (Html.BeginForm("ExportCSV", "Home", FormMethod.Post))
{

  <div class="form-group">
    <label for="hn">HN:</label>
    @Html.EditorFor(m => m.HN, new { htmlAttributes = new { @class = "form-control", placeholder = "Input Hn" } })
  </div>
  <div class="form-group">
    <label for="date">Date:</label>
    @Html.EditorFor(m => m.Date, new { htmlAttributes = new { @class = "form-control", placeholder = "yyyy-MM-dd" } })
  </div>
  <div class="form-group">
    <label for="time">Time:</label>
    @Html.EditorFor(m => m.Time, new { htmlAttributes = new { @class = "form-control", placeholder = "hh:mm:ss" } })
  </div>
  <div class="form-group">
    @Html.CheckBoxFor(m => m.MatchAll)
    <label for="check">Match All</label>
  </div>

    <button type="submit" class="btn btn-default">Submit</button>
}

